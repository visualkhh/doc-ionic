{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "resolveJsonModule": true,

    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2017.object",
      "es2016",
      "es2016.array.include",
      "es2015",
      "es2015.core",
      "es2015.collection",
      "es5",
      "es6",
      "dom"
    ]
  }
}
